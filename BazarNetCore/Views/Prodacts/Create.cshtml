@model BazarNetCore.Models.Prodacts

@{
    ViewData["Title"] = "Создать";
}

<h1>Create</h1>

<h4>Prodacts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayName("Название")
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Продавцы")
                @Html.DropDownList("Salers", ViewBag.salers as SelectList, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Salers" class="text-danger"></span>
                <a class="btn btn-success" target="_blank" asp-controller="Salers" asp-action="Create">Добавить продавца</a>
            </div>
            <div class="form-group">
                @Html.DisplayName("Тип")
                @Html.DropDownList("ProdactType", ViewBag.types as SelectList, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="ProdactType" class="text-danger"></span>
                <a class="btn btn-success" target="_blank" asp-controller="ProdactTypes" asp-action="Create">Добавить тип продукта</a>
            </div>
            <div class="form-group">
                @Html.DisplayName("Колличество")
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Вес")
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayName("Цена")
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
